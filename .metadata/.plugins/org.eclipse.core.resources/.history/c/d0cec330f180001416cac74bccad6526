package HomeworkPackage;
import java.util.Random;

public class BubbleSort {

	public static void main(String[] args) {
		int[] array = new int[10];
		Random rand = new Random();
		int minValue, mindex, swap;
		//boolean unsorted;
		
		for(int i=0; i<array.length; i++){
			array[i] = rand.nextInt(21)-10;
			System.out.print(array[i] + " ");
		}
		System.out.println();
		
		
		//unsorted = true;
		/*while(unsorted){
			for(int i=1; i<array.length; i++){
				if(array[i] < minValue){
					minValue = array[i];
					swap = array[i];
					for(int j=i; j>0; j--){
						array[j] = array[j-1];
					}
					array[0] = swap;
					break;
				}
				else if(i==array.length-1) unsorted = false;
			}
		}*/
		for(int i=0; i<array.length; i++){
			minValue = array[i];
			mindex = i;
			for(int j=i; j<array.length; j++){
				if(array[j]<minValue){
					mindex = j;
					minValue = array[j];
				}
			}
			swap = array[mindex];
			for(int j=mindex; j>i; j--){
				array[j] = array[j-1];
			}
			array[i] = swap;
		}
		
		System.out.println("Sorted Array:");
		for(int i=0; i<array.length; i++){
			System.out.print(array[i] + " ");
		}
	}
}
